{
  "manifest_version": 3,
  "name": "YT Assistant",
  "version": "1.0.0",
  "description": "Ask questions about the currently playing YouTube video",
  "permissions": ["storage"],
  "host_permissions": ["https://www.youtube.com/*"],
  "background": {
    "service_worker": "background/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content/content.js"]
    }
  ]

}
